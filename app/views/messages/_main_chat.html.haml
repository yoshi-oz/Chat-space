.mainbar
  .mainbar__head
    .mainbar__head__texts
      %h.mainbar__head__texts-1
        = @group.name
        %ul.mainbar__head__texts-1--members
          %li.mainbar__head__texts-1--members_title
            Member :
            - @group.users.each do |user|
              %li.mainbar__head__texts-1--members_member
                = user.name
      %h.mainbar__head__texts-2
        = link_to 'Edit', "edit"       
  .mainbar__body
    .mainbar__body__posts
    = render @messages
  = form_for [@group, @message] do |f|
    .mainbar__foot
      .mainbar__foot__form
        = f.text_field :content, class: 'mainbar__foot__form-text', placeholder: 'type a message'
        .mainbar__foot__form-images
          = f.label :image, class: "mainbar__foot__form-images--image" do
            = icon('fas', 'image', class: "icon")
            = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'mainbar__foot__send'
    
        

  














