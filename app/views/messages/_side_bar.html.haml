.sidebar
  .sidebar__head
    .sidebar__head__users
      %p.sidebar__head__users-user
        = current_user.name
      %ul.sidebar__head__users-icon
        %li.sidebar__head__users-icon__1
          = link_to new_group_path do
            =icon("fas", "pen-square", class: "icon")
        %li.sidebar__head__users-icon__2
          = link_to edit_user_path(current_user) do
            = icon("fas", "cog", class: "icon")
  .sidebar__body
    - current_user.groups.each do |group|
      .sidebar__body__texts
        = link_to group_messages_path(group) do
          %h.sidebar__body__texts-1
            = group.name
          %p.sidebar__body__texts-2
            = group.show_last_message
    
